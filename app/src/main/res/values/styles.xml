<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- 앱 테마 -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here -->
        <item name="colorPrimary">#6200EE</item>
        <item name="colorPrimaryDark">#3700B3</item>
        <item name="colorAccent">#FF4081</item>
    </style>

    <!-- 체크박스 스타일 예시 -->
    <style name="DayCheckBoxStyle">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:background">@drawable/day_checkbox</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:textAlignment">center</item>
    </style>


    <style name="TimePickerLightTheme" parent="Theme.MaterialComponents.Light">
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:textColorSecondary">#FFFFFF</item>
    </style>

    <style name="SpinnerLightTheme" parent="Theme.MaterialComponents.Light">
        <item name="android:textColor">#FFFFFF</item>
    </style>



</resources>
